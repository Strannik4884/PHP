<form method="post" action="{{ path('book_delete', {'id': book.id}) }}" onsubmit="return confirm('Вы действительно хотите удалить книгу?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn waves-effect waves-light" style="margin-top: 10px; width: 150px">Удалить</button>
</form>
